<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context=".MainMenu">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="294dp"
        android:layout_height="37dp"
        android:text="Coose the category to play"
        android:textAlignment="center"
        android:textColor="#4B99BD"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/testsRecyclerView_id"
        android:layout_width="339dp"
        android:layout_height="423dp"
        android:layout_marginBottom="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.858" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="277dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:text="Answer as many questions as you can before time runs out"
        android:textAlignment="center"
        android:textColor="#4B99BD"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="339dp"
        android:layout_height="423dp"
        android:layout_marginBottom="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.858"
        app:srcCompat="@drawable/rounded_border" />

    <SeekBar
        android:id="@+id/timeSeekBar_id"
        android:layout_width="286dp"
        android:layout_height="33dp"
        android:layout_marginBottom="16dp"
        android:progressBackgroundTint="#FFFFFF"
        android:progressTint="#36BD4C"
        app:layout_constraintBottom_toTopOf="@+id/testsRecyclerView_id"
        app:layout_constraintEnd_toEndOf="@+id/testsRecyclerView_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/testsRecyclerView_id" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="183dp"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        android:text="Select the time limit"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/timeSeekBar_id"
        app:layout_constraintEnd_toEndOf="@+id/timeText_id"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/timeSeekBar_id" />

    <TextView
        android:id="@+id/timeText_id"
        android:layout_width="66dp"
        android:layout_height="26dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/timeSeekBar_id"
        app:layout_constraintStart_toEndOf="@+id/timeSeekBar_id" />

</androidx.constraintlayout.widget.ConstraintLayout>